{
	"name": "my-aws-remix-app",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "remix build",
		"dev": "run-p dev:*",
		"dev:arc": "tsx ./dev sandbox",
		"dev:remix": "remix watch",
		"dynamolocaldb": "cross-env ARC_TABLES_PORT=8000 ARC_DB_EXTERNAL=true run-p docker:up dev:*",
		"docker:up": "docker compose up",
		"format": "prettier --write .",
		"generate:model": "ts-node --require ./tsconfig-paths-bootstrap.ts ./dynamodb/generate-model/index.ts",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"start": "npm run build && npx arc sandbox",
		"test": "vitest",
		"test:run": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:run": "cross-env CI=true PORT=3333 playwright test",
		"typecheck": "tsc",
		"validate": "run-p lint typecheck test:run && npm run test:e2e:run",
		"prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "sort-package-json && git add package.json"
		}
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"embeddedLanguageFormatting": "auto",
		"endOfLine": "lf",
		"htmlWhitespaceSensitivity": "css",
		"insertPragma": false,
		"jsxSingleQuote": false,
		"printWidth": 80,
		"proseWrap": "always",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": false,
		"singleAttributePerLine": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": true
	},
	"eslintIgnore": [
		"/node_modules",
		"/server/index.js",
		"/public/build",
		"playwright-report",
		"coverage"
	],
	"dependencies": {
		"@architect/architect": "^10.12.5",
		"@architect/functions": "^6.0.0",
		"@architect/sandbox": "^5.6.8",
		"@aws-sdk/util-dynamodb": "^3.335.0",
		"@remix-run/architect": "^1.16.1",
		"@remix-run/css-bundle": "1.16.1",
		"@remix-run/node": "^1.16.1",
		"@remix-run/react": "^1.16.1",
		"@remix-run/router": "^1.6.1",
		"@remix-run/serve": "^1.16.1",
		"@remix-run/server-runtime": "^1.16.1",
		"bcryptjs": "2.4.3",
		"cuid": "^2.1.8",
		"isbot": "^3.6.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tiny-invariant": "^1.3.1",
		"ulid": "^2.3.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.2.0",
		"@commitlint/config-conventional": "^17.2.0",
		"@faker-js/faker": "^7.6.0",
		"@playwright/test": "^1.27.1",
		"@remix-run/dev": "^1.16.0",
		"@remix-run/eslint-config": "^1.16.0",
		"@testing-library/dom": "^8.20.0",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@total-typescript/ts-reset": "^0.4.2",
		"@types/architect__functions": "^3.13.7",
		"@types/bcryptjs": "2.4.2",
		"@types/eslint": "^8.4.6",
		"@types/node": "^18.16.3",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@vitejs/plugin-react": "^3.1.0",
		"@vitest/coverage-c8": "^0.29.3",
		"autoprefixer": "^10.4.14",
		"c8": "^7.13.0",
		"cookie": "^0.5.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.3",
		"esbuild": "^0.17.19",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"happy-dom": "^6.0.4",
		"husky": "^8.0.3",
		"mock-aws-s3": "^4.0.2",
		"msw": "^1.2.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.23",
		"prettier": "^2.8.8",
		"prettier-plugin-tailwindcss": "^0.2.8",
		"sort-package-json": "^2.4.1",
		"start-server-and-test": "^1.15.4",
		"tailwindcss": "^3.2.7",
		"tailwindcss-radix": "^2.8.0",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^3.12.7",
		"typescript": "^5.0.4",
		"vite-tsconfig-paths": "^3.5.0",
		"vitest": "^0.31.1"
	},
	"engines": {
		"node": ">=14"
	}
}
